<%= simple_form_for(@profile, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

  
    <%= f.input :job_title, required: true, label: false, placeholder: "Job Title", input_html: {class: "form-control"} %>
    <%= f.input :job_description, required: true, label: false, placeholder: "Main Job Description", input_html: {class: "form-control", row: 7} %>
    <%= f.input :skills, required: true, label: false, placeholder: "Skills" , input_html: {class: "form-control"} %>
    <%= f.input :location, required: true, label: false, placeholder: "Location e.g London, UK", input_html: {class: "form-control"} %>
    <%= f.input :education, required: true, label: false, placeholder: "Education", input_html: {class: "form-control"} %>
    <%= f.input :qualifications, required: true, label: false, placeholder: "Qualifications", input_html: {class: "form-control"} %>



    <%= f.button :submit, class: "btn btn-primary btn-block" %>
 
<% end %>
